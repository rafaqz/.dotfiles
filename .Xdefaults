!===============================================
! Urxvt Settings
!===============================================
!
URxvt.meta8:False
URxvt.loginShell: true
URxvt.transparent:          false
URxvt.urgentOnBell:         true
URxvt.visualBell:           true
URxvt.loginShell:           true

!===============================================
!Layout
!===============================================
URxvt.internalBorder:       4
URxvt.lineSpace:            1

!===============================================
! Fonts
!===============================================
/* URxvt.letterSpace: -1 */
URxvt.allow_bold:           false
URxvt.font:                 xft:DejaVu Sans Mono for Powerline:pixelsize=12:antialiase=true:autohinting=true
URxvt.boldFont:             xft:DejaVu Sans Mono for Powerline:pixelsize=12:antialiase=true:autohinting=true
/* URxvt.font:                 xft:Menlo for Powerline:Regular:pixelsize=12:antialiase=true:autohinting=true */
/* URxvt.boldFont:             xft:Menlo for Powerline:Bold:pixelsize=12:antialiase=true:autohinting=true */
/* URxvt.font:                 xft:Sauce Code Powerline:pixelsize=12:autohinting=true */
/* URxvt.boldFont:             xft:Sauce Code Powerline Bold:pixelsize=12:autohinting=true */
/* URxvt.font:                 xft:Droid Sans Mono for Powerline:pixelsize=12antialiase=true:autohinting=true:Regular */
/* URxvt.boldFont:             xft:Droid Sans Mono for Powerline:pixelsize=12:antialiase=true:autohinting=true:Bold */
/* URxvt.font:                 xft:FuraMono-Regular Powerline:pixelsize=12 */
/* URxvt.boldFont:             xft:FuraMono-Bold Powerline:pixelsize=12 */
/* URxvt.font:                 xft:Meslo LG M Regular for Powerline:pixelsize=12:antialiase=true:autohinting=true */
/* URxvt.font:                 xft:Inconsolata for Powerline:pixelsize=14:antialiase=true:autohinting=true */

!===============================================
! Scrollbar
!===============================================
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
urxvt.scrollBar_right:      true
urxvt.secondaryScroll:      true

! Cursor
URxvt.cursorBlink:          false
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Misc
URxvt.saveLines:            8192
URxvt.perl-lib:             /usr/lib/urxvt/perl/
urxvt.cutchars:             "`'\",;@&*=|?()<>[]{}"
URxvt.termName:             rxvt

!===============================================
! URLs
!===============================================
URxvt.underlineUrls:        true
URxvt.url-select.launcher:  google-chrome-stable
URxvt.urlLauncher:          google-chrome-stable
URxvt.url-select.underline: true
URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.matcher.button:       1

URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

!===============================================
! Colors
!
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!===============================================

URxvt.depth:                24 !(This allows transparency, but breaks image previews in ranger)
URxvt.dynamicColors:        off
URxvt.fading: k0
URxvt.background: #002b36
URxvt.foreground: #657b83
URxvt.fadeColor: #002b36
URxvt.cursorColor: #93a1a1
URxvt.pointerColorBackground: #586e75
URxvt.pointerColorForeground: #93a1a1

! Swap background color for contrast.
URxvt.keysym.M-C-l: command:\033]4;1;#dc322f\007\033]11;rgba:fd00/f600/e300/e000\007
URxvt.keysym.M-C-d: command:\033]4;1;#dc322f\007\033]11;rgba:0000/2b00/3600/eff0\007

!! black dark/light
*color0: #073642
*color8: #002b36

!! red dark/light
*color1: #dc322f
*color9: #cb4b16

!! green dark/light
*color2: #859900
*color10: #586e75

!! yellow dark/light
*color3: #b58900
*color11: #657b83

!! blue dark/light
*color4: #268bd2
*color12: #839496

!! magenta dark/light
*color5: #d33682
*color13: #6c71c4

!! cyan dark/light
