! Xft settings ------------------------

!Xft.dpi:        96
!Xft.antialias:  true
!Xft.rgba:       rgb
!Xft.hinting:    true
!Xft.hintstyle:  hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt*loginShell: true
URxvt.depth:                32
URxvt.transparent:          false
URxvt.geometry:             90x30
URxvt.urgentOnBell:         true
URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.internalBorder:       5
URxvt.lineSpace:            0
 
! Fix font space
!URxvt.letterSpace: -1

! Fonts
URxvt.allow_bold:           false
URxvt.font:                 xft:DejaVu Sans Mono:pixelsize=12:antialiase=true:autohinting=true
URxvt.boldFont:             xft:DejaVu Sans Mono:pixelsize=12:antialiase=true:autohinting=true

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false
urxvt.scrollBar_right:      true
urxvt.secondaryScroll:      true

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Misc
URxvt.saveLines:            8192
URxvt.perl-lib:             /usr/lib/urxvt/perl/
urxvt.cutchars:             "`'\",;@&*=|?()<>[]{}"
URxvt.urgentOnBell:	        true
URxvt.termName:             rxvt

! URLs
URxvt.underlineUrls:        true
!URxvt*perl-ext-common: default,matcher,-option-popup,-selection-popup,-realine
URxvt.matcher.button:       1
# don't forget to change this to your favorite browser
URxvt.urlLauncher:          google-chrome
Urxvt.url-select.launcher:	google-chrome

URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
URxvt.url-select.launcher:  google-chrome-stable
URxvt.url-select.underline: true
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! Swap background color for contrast.
URxvt.keysym.M-C-l: command:\033]4;1;#AA0000\007\033]11;rgba:fd00/f600/e300/e000\007
URxvt.keysym.M-C-d: command:\033]4;1;#AA0000\007\033]11;rgba:0000/2b00/3600/eff0\007

! Colors
URxvt.dynamicColors:        off
!urxvt*background: rgba:ffff/ffff/ffff/bbbb
URxvt.background: rgba:0000/2b00/3600/eff0

*background: #002b36
*foreground: #657b83
*fading: k0
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

