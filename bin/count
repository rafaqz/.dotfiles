#!/bin/bash
file=$1
ext="${file##*.}"

if [ $ext = "pdf" ]; then
  # pdftotext: dash is for output to stdout instead of file
  pdftotext $file - | sed -n '/^introduction/I,/^appendix\|^references\|^bibliography/Ip' | wc -w
else
  pandoc -t plain $file | sed -n '/^introduction/I,/^appendix\|^references\|^bibliography/p' | wc -w
fi
