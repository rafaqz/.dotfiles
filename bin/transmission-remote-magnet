#!/bin/bash
# transmission-remote-magnet
# Usage: transmission-remote-magnet <magnet URL>

magnet="$1"
remote="cloud"

. ~/.keychain/$HOSTNAME-sh
echo `date -u` `ssh $remote "/usr/bin/transmission-remote --auth transmission:transmission --add '$magnet'"` >> ~/magnet.log
notify-send "Torrent Downloaded: $magnet"
