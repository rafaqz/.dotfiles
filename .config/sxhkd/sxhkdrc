# Assign existing keys
XF86MonBrightnessUp
  xbacklight -inc $(bc <<< scale=6; $((xbacklight)+5)/5)
XF86MonBrightnessDown
  xbacklight -dec $(bc <<< scale=6; $((xbacklight)+5)/5)
XF86AudioRaiseVolume
  amixer set Master playback 1+
XF86AudioLowerVolume
  amixer set Master playback 1-
XF86AudioMute
  amixer set Master toggle
XF86TouchpadToggle
  synclient TouchpadOff=`synclient -l | grep -ce TouchpadOff.*0`
XF86ScreenSaver
  slock
XF86Display 
  projector
{_,ctrl} + Print 
  {screenshot, screenshot-select}

# Run core aps
super + alt + {_,ctrl} + o 
  {pcmanfm, urxvtr -e sudo pcmanfm}
super + alt + {_,ctrl} + p
  {firefox, chromium}
super + alt + {_,ctrl} + 7 
  {vlc, clementine}
super + alt +            8 
  gimp
super + alt + {_,ctrl} + 9 
  libreoffice {--writer, --calc}
super + alt + {_,ctrl} + 0 
  {transmission-gtk, nicotine.py}

# Run others
super + alt + {j,z,e,b,h,c,a,s,i,semicolon,minus,underscore,equal}
  {\ 
    urxvtr,\
    zotero,\ 
    google-earth,\ 
    baobab,\ 
    hamster,\ 
    owncloud,\ 
    lxappearance,\ 
    skype,\ 
    xcalib -invert -alter,\ 
    wicd-gtk -n,\ 
    gcolor2,\ 
    gpick,\ 
    speedcrunch\ 
  }

# In a terminal
super + alt + {_,ctrl} + {l,t,bracketleft} 
  urxvtr -e { ,sudo }{\ 
    ranger,\ 
    todotxt-machine,\ 
    htop,\ 
  }

# Hold terminal open
super + alt + {_,ctrl} + {bracketright,apostrophe} 
  urxvtr -hold -e { ,sudo }{\ 
    powertop,\
    cal --color -3,\ 
  }

# In vim (server mode with a random id)
super + alt + {k,w,n,m,comma,period,slash}
  urxvt -e vim -p --servername `openssl rand -hex 12` { ,\
    ~/Documents/notes/words.md,\ 
    ~/.xmonad/xmonad.hs ~/.xmonad/xmobar.hs ~/.config/awesome/rc.lua ~/.config/sxhkd/sxhkdrc, \ 
    ~/.bashrc,\ 
    ~/.vim_runtime/vimrcs/*,\ 
    ~/.config/ranger/rc.conf,\ 
    ~/.Xdefaults ~/.xinitrc\ 
  }
