# Assign existing keys
XF86MonBrightnessUp
  xbacklight -inc $(bc <<< scale=6; $((xbacklight)+5)/5)
XF86MonBrightnessDown
  xbacklight -dec $(bc <<< scale=6; $((xbacklight)+5)/5)
XF86AudioRaiseVolume
  amixer -q -D pulse set Master playback 1%+
XF86AudioLowerVolume
  amixer -q -D pulse set Master playback 1%-
XF86AudioMute
  amixer set Master playback toggle
XF86TouchpadToggle
  synclient TouchpadOff=`synclient -l | grep -ce TouchpadOff.*0`
XF86ScreenSaver
  i3lock -u
XF86Display 
  projector
{_,ctrl} + Print 
  {screenshot, screenshot-select}

# Run core aps 
super + alt + {_,ctrl} + o 
  {pcmanfm, urxvtcd -e sudo pcmanfm}
super + alt + {_,ctrl} + p
  {firefox, chromium}
super + alt + {_,ctrl} + 7 
  {vlc, clementine}
super + alt +            8 
  gimp
super + alt + 9 
  libreoffice
super + alt + {_,ctrl} + 0 
  {transmission-gtk, nicotine.py}

# Run others
super + alt + {a,j,z,e,f,b,h,c,a,i,minus,equal}
  {\ 
    pavucontrol,\
    urxvtcd,\
    zotero,\ 
    google-chrome-stable --app='https://earth.google.com/web/',\ 
    franz-bin,\ 
    baobab,\ 
    hamster,\ 
    owncloud,\ 
    lxappearance,\ 
    xcalib -invert -alter,\ 
    gcolor2,\ 
    speedcrunch\ 
  }
super + alt + shift + {l,equal,semicolon}
  {\
    urxvtcd -e bash rs,\ 
    gpick, \
    urxvtcd -e bash alsamixer\
  }

# In a terminal
super + alt + {_,ctrl} + {l,semicolon,bracketleft,a} 
  urxvtcd -e { ,sudo }{\ 
    ranger,\ 
    pulsemixer,\
    htop\ 
  }

# Hold terminal open
super + alt + {_,ctrl} + {bracketright,apostrophe} 
  urxvtcd -hold -e  bash { ,sudo }{\ 
    powertop,\
    cal -3\ 
  }

# In vim (server mode)
super + alt + {k,w,n,m,comma,period,slash}
  urxvtcd -e vim { ,\
    ~/Documents/notes/words.md,\ 
    ~/.xmonad/xmonad.hs ~/.xmonad/xmobar.hs ~/.config/sxhkd/sxhkdrc ~/.config/dunst/dunstrc, \ 
    ~/.bashrc ~/.profile ~/.bash_profile,\ 
    ~/.vim_runtime/vimrcs/mapping.vim ~/.vim_runtime/vimrcs/plugins_config.vim ~/.vim_runtime/vimrcs/settings.vim ~/.vim_runtime/vimrcs/filetypes.vim ~/.vim_runtime/vimrcs/functions.vim ,\ 
    ~/.config/ranger/rc.conf ~/.config/ranger/rifle.conf ~/.config/ranger/scope.sh ~/.config/ranger/commands.py ~/.config/ranger/bookmarks,\ 
    ~/.Xdefaults ~/.xinitrc ~/.Xmodmap \
  }

ctrl + alt + {_,shift} + p
  {clipit -p | clipit, clipit -c | clipit}
